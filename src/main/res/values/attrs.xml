<resources>


    <declare-styleable name="CustomFont">
        <attr name="font_name" format="string|reference" />
    </declare-styleable>

    <!--This attributes must to be used in this mode:
        android:textSize="?attr/font_medium"
        For avoid errors where this custom attributes are not found
        Views using this custom attributes must to be inflated from ActivityContext
        not from Application context. More info
        http://stackoverflow.com/questions/26524048/upgrading-to-sdk-21-error-inflating-class-android-support-v7-internal-widget-a/27999606#27999606-->

    <declare-styleable name="FontStyle">
        <attr name="font_xsmall" format="dimension" />
        <attr name="font_small" format="dimension" />
        <attr name="font_medium" format="dimension" />
        <attr name="font_large" format="dimension" />
        <attr name="font_xlarge" format="dimension" />
    </declare-styleable>

    <declare-styleable name="CircleView">
        <attr name="stroke_color" format="color|reference"/>
        <attr name="stroke_width" format="dimension|reference"/>
        <attr name="circle_radius" format="dimension"/>
        <attr name="circle_gap" format="dimension"/>
        <attr name="fill_color" format="color|reference"/>
    </declare-styleable>
</resources>
